@model Models.DbModels.SearchAvailableGround

@{
    ViewData["Title"] = "GetAvailableGround";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAvailableGround</h1>

<h4>SearchAvailableGround</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetAvailableGround">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="SessionId" id="earlymorning" class="form-control" value="1" />
                <label class="form-check-label" for="earlymorning">06:30 am</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="SessionId" id="morning" class="form-control" value="2" />
                <label class="form-check-label" for="morning">10:00 am</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="SessionId" id="noon" class="form-control" value="3" />
                <label class="form-check-label" for="noon">02:00 pm</label>
                <span asp-validation-for="SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" dateformat="d M y" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="SportType" id="badminton" class="form-control" value="Badminton" />
                <label class="form-check-label" for="badminton">Badminton</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="SportType" id="tennis" class="form-control" value="Tennis" />
                <label class="form-check-label" for="tennis">Tennis</label>
                <span asp-validation-for="SportType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
