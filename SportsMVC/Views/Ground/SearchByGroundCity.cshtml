
<h1>SearchByGroundCity</h1>
<input type="text" id="city" name="city"/>




<script type="text/javascript">
    function CopyToLabel() {
        //Reference the TextBox.
        var txtName = document.getElementById("city"); 
        window.location.href = '@Url.Action("SearchByGroundCity", "Ground")?city=' + txtName.value;
        //return false;
    }
</script>

<input type="submit" value="Search" class="btn btn-primary" onclick="return CopyToLabel()" />


